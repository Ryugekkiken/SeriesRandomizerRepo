<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/spinnerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spinner_label_text"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@id/seasonSpinner" />

    <Spinner
        android:id="@+id/seasonSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/spinnerLabel"
        android:layout_alignParentEnd="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clickableArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/seasonSpinner">

        <TextView
            android:id="@+id/hintView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/randomize_hint_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>